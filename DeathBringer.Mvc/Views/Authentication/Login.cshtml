@using DeathBringer.Mvc.Models.Authentication;
@model LoginModel

<form method="post" asp-controller="Authentication" asp-action="Login">
    username <input type="text" asp-for="Username" />
    <br />
    password <input type="text" asp-for="Password" />
    <br />
    <input type="submit" value="Login" />

    @if (Model.IsLoginOk == true)
    {
        
        <a asp-controller="Home" asp-action="Index">
            <p>Autenticazione corretta! Vai alla home</p>
        </a>
    }
    else if (Model.IsLoginOk == false)
    {
        <p>Autenticazione fallita!</p>
    }

</form>

